<div class="row">
  <div class="page-header">
    <h1>Editing <%= @person.full_name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= render 'form' %>
  </div>
  <div class="col-md-4">
    <%= image_tag(@person.picture_url(:xhdpi), class: 'img-thumbnail') if @person.picture? %>
  </div>
</div>

<div class="row">
  <hr/>
  <p class="col-md-8">
    <%= link_to 'Show', [:admin, @person], class: 'btn btn-info' %>
    <%= link_to 'Back', admin_people_path, class: 'btn btn-default' %>
  </p>
</div>
